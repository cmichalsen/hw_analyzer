{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Main Process",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron-vite",
      "windows": {
        "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron-vite.cmd"
      },
      "runtimeArgs": ["--sourcemap"],
      "env": {
        "REMOTE_DEBUGGING_PORT": "9222"
      },
      "outputCapture": "std",
      "skipFiles": ["<node_internals>/**"],
      "preLaunchTask": "Start SvelteKit Dev Server"
    },
    {
      "name": "Debug Renderer Process (SvelteKit)",
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "webRoot": "${workspaceFolder}/src/renderer/src",
      "sourceMaps": true,
      "timeout": 60000,
      "urlFilter": "http://localhost:5173/*",
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "sourceMapPathOverrides": {
        "/*": "${webRoot}/*"
      },
      "presentation": {
        "hidden": true
      }
    },
    {
      "name": "Debug SvelteKit Dev Server",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/src/renderer",
      "runtimeExecutable": "bun",
      "runtimeArgs": ["vite", "dev", "--port", "5173"],
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal"
    }
  ],
  "compounds": [
    {
      "name": "Debug All (Electron + SvelteKit)",
      "configurations": ["Debug SvelteKit Dev Server", "Debug Main Process", "Debug Renderer Process (SvelteKit)"],
      "presentation": {
        "order": 1
      },
      "stopAll": true
    }
  ]
}
